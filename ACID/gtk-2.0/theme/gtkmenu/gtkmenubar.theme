style "gtkmenubar"
{
xthickness = 0
ythickness = 0
GtkMenuBar::shadow-type = GTK_SHADOW_NONE
GtkMenuBar::internal-padding = 3
bg[PRELIGHT] = "#a5e12d"
fg[PRELIGHT] = "#333"
fg[NORMAL] = "#a5e12d"
engine "pixmap"
{
image
{
function = SHADOW
shadow = NONE
file = "image/menubarshadow.gif"
border = {0,0,1,2}
stretch = TRUE
}
}
}
widget_class "*.<GtkMenuBar>*" style "gtkmenubar"
style "gtkmenubarfont"
{
GtkMenuBar::shadow-type = GTK_SHADOW_NONE
GtkMenuBar::internal-padding = 3
bg[PRELIGHT] = "#a5e12d"
fg[PRELIGHT] = "#333"
fg[NORMAL] = "#a5e12d"
engine "mist"
{
}
}
widget_class "*.<GtkMenuBar>*<GtkLabel>*" style "gtkmenubarfont"
